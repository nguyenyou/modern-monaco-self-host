{
  "name": "modern-monaco-self-hosted-example",
  "version": "1.0.0",
  "description": "Complete example of self-hosting modern-monaco with proper worker configuration",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "start": "node server.js",
    "clean": "rm -rf dist public/dist",
    "setup": "npm run clean && npm run build && npm run copy-monaco",
    "copy-monaco": "node scripts/copy-monaco.js",
    "test": "node scripts/test.js",
    "verify": "npm run test"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "modern-monaco": "0.2.1"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.0"
  },
  "keywords": [
    "monaco-editor",
    "self-hosted",
    "web-workers",
    "typescript",
    "code-editor"
  ],
  "author": "Modern Monaco Team",
  "license": "MIT"
}
